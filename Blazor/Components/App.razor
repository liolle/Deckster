    <script type="module" src="Js/game.js"></script>
    <script type="module" src="Js/main.js"></script>
    <script>
        function setDefaultReconnectionHandler() {
           let handler = window.Blazor.defaultReconnectionHandler  
            if (!handler) {
                setTimeout(()=>{
                    setDefaultReconnectionHandler()
                },1000)
                
            }else{
               handler._reconnectCallback = function (d) {document.location.reload();} 
            }
        }
        setDefaultReconnectionHandler()
    </script>
</body>

</html>
