<body>
    <Routes />

    <!-- Load ENV  -->

    <script>
        window.env = {
            HUB_ENDPOINT: '@Environment.GetEnvironmentVariable("HUB_ENDPOINT")',
        };
    </script>
    <script type="module" src="Js/main.js"></script>
    <script src="_framework/blazor.web.js"></script>
    <script src="Packages/signalr/signalr.min.js"></script>
