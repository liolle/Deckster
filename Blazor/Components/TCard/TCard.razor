@if (Image is not null)
{
    <div class="out-layer">
        @if (Quantity > 0)
        {

            <div class="card-counter @MaxedStatus()">
                <span class="num">@Quantity</span>
                <span>/</span>
                <span class="num denominator">5</span>
            </div>
        }

        <div class="card-container">
            <img src="@Image">
            <div class="marker card-cost">
                <span>@CCard.Cost</span>
            </div>
            <div class="marker card-strength">
                <span>@CCard.Strength</span>
            </div>
            <div class="marker card-defense">
                <span>@CCard.Defense</span>
            </div>
        </div>
    </div>
}