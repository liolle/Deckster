@using Blazor.services
@inject ToastService ToastService
@rendermode RenderMode.InteractiveServer

<div class="toast-message-box @Enum.GetName(_toast.Type)">
    <span class="toast-message-content">@_toast.Content</span>
    <button class="toast-close-button" @onclick="Remove">
        <span>x</span>
    </button>
</div>
