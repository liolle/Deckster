@using Blazor.services
@inject ToastService ToastService
@rendermode RenderMode.InteractiveServer

@if (Visible)
{
    <div class="toast-message-container">
        <div class="toast-message-box @Type">
            <span class="toast-message-content">@Content</span>
            <button class="toast-close-button" @onclick="Hide">
                <span>x</span>
            </button>
        </div>
    </div>
}